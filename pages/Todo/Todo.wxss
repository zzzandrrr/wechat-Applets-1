.todo{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-image: url('https://t1.picb.cc/uploads/2018/04/10/21lWVG.md.jpg');
  background-size: cover;
}
.inputform{
  width: 100%;
  display: flex;
  margin-bottom: 50rpx;
}
.input{
  width: 70%;
  padding: 10rpx;
  margin-top: 50rpx;
  margin-left: 70rpx;
  border-radius: 4px;
  box-shadow: inset 0 0 0 1rpx #7e7e7e;
}
.btn{
  box-shadow:inset 0 0 2px #7e7e7e ;
  border-radius: 4px;
  height: 70rpx;
  width: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 60rpx;
  font-weight: 600;
  color: rgb(137, 245, 239);
  margin-top: 50rpx;
  margin-left: 10rpx;
}
.todoList{
  color: #474747;
  width: 85%;
  margin: 30rpx auto;
  border-top: 1rpx solid #aaa;
}
.todoList .todo-content{
  position: absolute;
  left:80rpx;
  right:80rpx;
  top: 200rpx;
  bottom: 150rpx;
  font-size: 0.9em;
}
.content{
  width: 100%;
  height:100%;
}
.todoList .todo-content .todoLine{
  display: flex;
  align-items: center;
  padding: 6rpx 0;
  color: #222;
}
.clearIcon{
  position: absolute;
  right: 0;
}
.text{
  padding-left:10rpx; 
  width: 75%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.textDelete{
  color:#696969;
  text-decoration: line-through;
  padding-left:10rpx; 
  width: 75%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.todo-footer{
  position: absolute;
  font-size: 0.8em;
  padding-top: 5rpx;
  padding-left: 15rpx;
  border-top: 2rpx solid #aaa;
  color: #696969;
  bottom: 0;
  left:50rpx;
  right: 50rpx;
}
.proverb{
  text-align: center;
  color: #696969;
  font-size: 0.9em;
  font-weight: 500;
}